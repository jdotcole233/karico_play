<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".KaricoSkillsLevels">

    <RelativeLayout
        android:id="@+id/skilslevelheader"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="#f58442"
        >

        <ImageButton
            android:id="@+id/skillsbackbtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_close_black_24dp"
            android:background="#f58442"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/skilslevelheader"
        android:padding="10dp"
        >

        <Button
            android:id="@+id/primaryMotorSkills"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Primary Motor-skill"
            android:background="@drawable/button_rounded_edges"
            android:backgroundTint="#f58442"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:elevation="13dp"
            />

        <Button
            android:id="@+id/intermediaryMotorSkills"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:text="Intermediary Motor Skill"
            android:background="@drawable/button_rounded_edges"
            android:backgroundTint="#f58442"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:elevation="13dp"
            />
    </LinearLayout>



</RelativeLayout>