<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MusicRowView"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@drawable/music_row_background"
    android:backgroundTint="#ffffff"
    android:layout_marginTop="5dp"
    android:id="@+id/selectFolderCard"
    >

    <ImageView
        android:id="@+id/folderImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_folder_black_24dp"
        android:background="@drawable/motor_player_rounded_button"
        android:padding="10dp"
        android:backgroundTint="#70C5EB"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/folderImage"
        android:layout_toRightOf="@+id/folderImage"
        android:paddingLeft="5dp"
        android:layout_centerInParent="true"
        >
        <TextView
            android:id="@+id/folderName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jingle Playlist"
            android:textSize="16sp"
            android:textColor="#000000"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/foldersize"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="12.5 MB"
                />

            <TextView
                android:id="@+id/music_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text=". 65 Musics"
                />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/removemusic"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:text="Remove"
        android:textAllCaps="false"
        android:layout_alignParentRight="true"
        android:background="@drawable/music_row_btn"
        android:src="@drawable/ic_remove_circle_black_24dp"
        android:backgroundTint="#ff0000"
        android:scaleType="fitCenter"
        android:layout_centerInParent="true"
        />



</RelativeLayout>